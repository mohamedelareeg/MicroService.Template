{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "StorageApi": {
        "ClusterId": "storage_cluster",
        "Match": {
          "Path": "storage/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "JobConfigurationApi": {
        "ClusterId": "jobconfiguration_cluster",
        "Match": {
          "Path": "jobconfig/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "DocumentTrackingApi": {
        "ClusterId": "documenttracking_cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/tracking/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "AutomaticSeperationApi": {
        "ClusterId": "automaticseperation_cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "automation/seperation/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "AutomaticReleaseApi": {
        "ClusterId": "automaticrelease_cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "automation/release/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "storage_cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "storageapi_destination1": {
            "Address": "http://ARPSolutions.storageapi1:6082/"
          },
          "storageapi_destination2": {
            "Address": "http://ARPSolutions.storageapi2:6084/"
          }
        }
      },
      "jobconfiguration_cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "jobconfigurationapi_destination": {
            "Address": "http://ARPSolutions.jobconfigurationapi:7100/"
          }
        }
      },
      "documenttracking_cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "documenttrackingapi_destination": {
            "Address": "http://ARPSolutions.documenttrackingapi:6086/"
          }
        }
      },
      "automaticseperation_cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "automaticseperationapi_destination": {
            "Address": "http://ARPSolutions.automaticseperationapi:6088/"
          }
        }
      },
      "automaticrelease_cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "automaticreleaseapi_destination": {
            "Address": "http://ARPSolutions.automaticreleaseapi:6090/"
          }
        }
      }
    },
    "AuthorizationPolicies": {
      "default": {
        "RequiresAuthentication": true,
        "UnauthorizedResponseStatusCode": 403
      }
    }
  }
}
